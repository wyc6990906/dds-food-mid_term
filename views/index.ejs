<!-- side panel / offcanvas -->
<% if (user['is_owner'] === null || user['is_owner'] === false ) { %>
    <div class="offcanvas offcanvas-start" tabindex="-1" id="sidebar" aria-labelledby="sidebar-label">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="sidebar-label">Check Your Order</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body ">
            <div class="container">
                <table class="table sideBarTable table-striped table-hover">
                    <thead style='text-align: center;'>
                    <tr>
                        <th scope="col">Product</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                    </tr>
                    </thead>
                    <tbody class="sideBarTbody">

                    </tbody>
                </table>

                <div class="order-cart-area">
                    <div class="order-cart">
                        <ul class="fw-semibold text-center" style="list-style: none;margin-left: -30px">
                            <li class="d-flex justify-content-between ">Subtotal<span class="subTotal">$0.00</span>
                            </li>
                            <li class="d-flex justify-content-between ">Tax<span class="">10%</span></li>
                            <li class="total d-flex justify-content-between">Total<span
                                        class="taxed-total">$0.00</span>
                            </li>
                        </ul>
                    </div>
                    <a class="btn btn-warning submit-order w-100 fw-bold" href="/cart">PROCEED TO CHECKOUT</a>
                </div>
            </div>

        </div>
    </div>
    <!-- open sidebar / offcanvas -->
    <div class="sidebarTrigger position-fixed top-50 end-0" style="z-index: 9999">
        <a id="sidebarTrigger" href="#sidebar" class="btn btn-dark mt-3 " data-bs-toggle="offcanvas"
           role="button"
           aria-controls="sidebar">
            <i class="fa-solid fa-cart-plus"></i> Check Your Cart
        </a>
    </div>
<% } %>
<!--product Area Start-->
<section id="product-area" class="product-area">
    <div class="container">
        <!--  product header       -->
        <div class="row justify-content-center">
            <div class="col-12 product-area-top-wrapper">
                <div class="section-title text-center">
                    <h1>MENU</h1>
                    <h3 class="title">Taste Of Japan.</h3>
                    <br/>
                </div>
                <ul class="product-nav style-2 nav nav-pills" id="pills-tab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="pills-allItems-tab" data-bs-toggle="pill"
                                data-bs-target="#pills-allItems"
                                type="button" role="tab" aria-controls="pills-allItems" aria-selected="true"><i
                                    class="fa-solid fa-utensils"></i> ALL ITEMS
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pills-appetizer-tab" data-bs-toggle="pill"
                                data-bs-target="#pills-appetizer"
                                type="button" role="tab" aria-controls="pills-appetizer" aria-selected="false"><i
                                    class="fa-solid fa-bowl-rice"></i> APPETIZERS
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pills-main-tab" data-bs-toggle="pill"
                                data-bs-target="#pills-main"
                                type="button" role="tab" aria-controls="pills-main" aria-selected="false"><i
                                    class="fa-solid fa-bowl-food"></i> MAINS
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pills-dessert-tab" data-bs-toggle="pill"
                                data-bs-target="#pills-dessert"
                                type="button" role="tab" aria-controls="pills-dessert" aria-selected="false">
                            <i class="fa-solid fa-ice-cream"></i> DESSERTS
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pills-drink-tab" data-bs-toggle="pill"
                                data-bs-target="#pills-drink"
                                type="button" role="tab" aria-controls="pills-drink" aria-selected="false">
                            <i class="fa-solid fa-glass-water"></i>
                            DRINKS
                        </button>
                    </li>
                    <!-- <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pills-drinks-tab" data-bs-toggle="pill"
                                data-bs-target="#pills-drinks"
                                type="button" role="tab" aria-controls="pills-drinks" aria-selected="false"><img
                                    src="/assets/image/category/6.png" alt="img">Soft drinks
                        </button>
                    </li> -->
                </ul>
            </div>
        </div>

        <!-- menu creation -->
        <% for (const [category, items] of Object.entries(menu)) { %>
            <div class="tab-content mt-5" id="pills-tabContent">
                <div class="tab-pane fade show <%= category === 'allItems' ? 'active' : '' %>"
                     id="pills-<%= category %>"
                     role="tabpanel" aria-labelledby="pills-<%= category %>-tab">
                    <div class="row justify-content-center">
                        <% for (const item of items) { %>
                            <div class="col-xl-3 col-lg-4 col-md-6 mb-3">
                                <div class="single-item-wrap">
                                    <div class="thumb ps-1">
                                        <img class="img-fluid img-thumbnail" src=<%= item.image_url %> alt="img">
                                    </div>
                                    <br>
                                    <div class="wrap-details">
                                        <h4><%= item.name %></h4>
                                        <h6 class="price">$<%= (item.price / 100).toFixed(2) %></h6>
                                        <p class="text-center text-muted"><%= item.description %></p>
                                        <div class="details-bottom p-3">
                                            <div style="display: flex; justify-content: space-between;">
                                                <input type="number" min='0' placeholder="Qty." class="form-control"
                                                       style="width: 35%;">
                                                <button class="btn btn-warning add-to-cart" style="width: 60%;"
                                                        value=<%= item.id %>>
                                                    Add
                                                    <i class="fa-solid fa-cart-plus"></i>
                                                </button>
                                            </div>
                                            <div class="added-to-cart-notification"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</section>
